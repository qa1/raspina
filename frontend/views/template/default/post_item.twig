{{ use('yii/helpers/Html') }}
<div class="post-border shadow">
    <div class="panel panel-default post-panel">
        <div class="panel-body">
            <div class="post-title">
                {% if(model.pin_post) %}
                    <span class="pin-post fa fa-thumb-tack "></span>
                {% endif %}

                {{ html.a(model.title,{0: 'post/view','id': model.id,'title':model.title}) | raw }}
            </div>
            <!-- -->
            {% set postCategories = model.category_ids|split(',') %}
            {% if(postCategories[0]) %}
                <span class="post-detail">
					<span class="fa fa-list"></span>
                    {% for category_id in postCategories %}
                        {{ html.a(this.params.categories[category_id],{0: 'site/index','category': category_id,'title':this.params.categories[category_id]}) | raw }}<delimiter>،</delimiter>
                    {% endfor %}
				</span>
            {% endif %}
            <span class="post-detail">
				<span class="fa fa-user"></span>
                {{ model.username }}
			</span>
			<span class="post-detail">
				<span class="fa fa-calendar"></span>
                {{ pdate(model.create_time) }}
			</span>
			<span class="post-detail">
				<span class="fa fa-comment-o"></span>
                {{ model.comment_count }}
			</span>
			<span class="post-detail">
				<span class="fa fa-eye "></span>
                {{ model.view }}
			</span>
            <div class="clear"></div>
            <!-- -->
            <div class="post-text">
                {{ model.short_text | raw }}
                {% if model.more %}
                    <hr class="more-hr">
                    {{ html.a('بیشتر...',{0: 'post/view','id': model.id,'title':model.title},{'class': 'button more'}) | raw }}
                {% endif %}
            </div>
        </div>
    </div>
</div>

